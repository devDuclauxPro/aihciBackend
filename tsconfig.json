{
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "target": "ESNext",
    "module": "CommonJS",
    "noImplicitAny": true,
    "noEmitOnError": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
