{
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "target": "ESNext",
    "module": "CommonJS",
    "noImplicitAny": true,
    "noEmitOnError": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["src/**/*.ts", "src/types/**/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}
